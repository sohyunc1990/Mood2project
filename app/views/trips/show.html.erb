<div class="background">
<div class="row" style="padding-top:1%; padding-bottom:2%;">
<%= image_tag 'photo/logo4.png', style:"width:25%; height:10%" %><br><br>
</div>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="/welcome">Home</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <%if logged_in?%>
    <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/trips">My Trips</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/destinations">Destinations</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/attractions">Attractions</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/reviews">Reviews</a>
        </li>
    </ul>
    <span class="nav-item">
      <%= link_to "Logout", '/logout', method: :delete %>
    </span>
    <%else%>
    <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/login">Login</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/users/new">Sign Up</a>
        </li>
      </ul>
    <%end%>
</nav>


<div class="row" style="padding-top:4%;">
<div class="col"></div>
<div class="col-md-7 text-center">

<h2 class="text-white"><%= @trip.title %></h2>
<h5 class="text-white"><%= @trip.description %></h5>
<br>

<p>Destination:</p>
<p class="text-white"><%= @trip.destination.city %></p>
<img src="<%= @trip.destination.image %>" alt="destination image" height=200 width=400>
<br>
<br>
<p class="text-white">Departure Date:</p>
<p class="text-white"><%= @trip.reformat_date %></p><br>

<div class="btn-group" role="group" aria-label="Trip-group-button">
<%= button_to 'Edit Trip', edit_trip_path(@trip), method: :get, class:'btn btn-md btn-secondary'%>
<%= button_to 'Delete Trip', trip_path(@trip), method: :delete, class:'btn btn-md btn-secondary', data: {confirm: "Are you sure?"}%>
</div>



</div><!-- .col-md-7 -->
<div class="col"></div>
</div><!-- .row -->
